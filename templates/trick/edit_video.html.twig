{% extends 'base.html.twig' %}

{% block title %}
    {{ 'page.edit.video.title'|trans }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">{{ 'page.edit.video.title'|trans|capitalize }}</h1>
        <div class="row d-flex justify-content-center mt-4">
            <div class="col-5 ">
                <div class="embed-responsive embed-responsive-1by1">
                    {{ video.tag|raw }}
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center mt-4">
            <div class="col-6">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}