{% extends 'base.html.twig' %}

{% block title %}Liste des figures{% endblock %}

{% block body %}
    <div id="carouselTrickIndex" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            {% for image in images  %}
                <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <img src="{{ image.linkPath }}" class="d-block w-100" alt="{{ image.caption }}">
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselTrickIndex" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselTrickIndex" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container">
        <div class="row">
            {% for trick in tricks %}
                <div class="col-md-4 mt-4">
                    <div class="card">
                        <img class="card-img-top" src="{{ trick.coverImage.linkPath }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ trick.name }}</h5>
                            <div class="card-text">
                            </div>
                            <a href="{{ path('app_trick_show', {'slug': trick.slug}) }}" class="btn btn-primary">En savoir plus</a>
                            {% if app.user == trick.user%}
                                <a href="{{ path('app_trick_edit', {'slug': trick.slug}) }}">
                                    <i class="far fa-edit mx-2" title="{{ 'link.title.trick.edit'|trans }}"></i>
                                </a>
                                <a href="{{ path('app_trick_delete', {'slug': trick.slug}) }}" onclick="return confirm('{{ 'flash.alert.delete'|trans }}')">
                                    <i class="far fa-trash-alt mx-2" title="{{ 'link.title.trick.delete'|trans }}"></i>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
